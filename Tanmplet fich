    *{box-sizing:border-box}body{margin:0;padding:16px;font-family:ui-sans-serif,system-ui,Arial;color:var(--ink)}
    .wrap{max-width:420px;margin:0 auto}
    .brand{display:flex;align-items:center;gap:10px;margin-bottom:8px}
    .brand img{height:28px;width:auto;border-radius:6px}
    .kv{display:flex;justify-content:space-between;font-size:14px;margin:2px 0}
    .muted{color:var(--muted);font-size:12px;margin-top:8px}
    @media print {.no-print{display:none} body{padding:8px}}
